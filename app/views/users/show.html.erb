<div class="container col-xs-8 col-xs-offset-5">

    <div class="show-profile">
        <% if @user.image.present? %>
        <%= cl_image_tag(@user.image, :class => "img-circle show-img")%>
        <% else %>
        <%= image_tag 'avatar.jpg', :class => "img-circle show-img" %>
        <% end %>
        <li class="show-info"><strong>Name:</strong>
            <%= @user.name %></li>
        <li class="show-info"><strong>Email:</strong>
            <%= @user.email %></li>
        <% if @user.location_id.present? %>
        <li class="show-info"><strong>Location:</strong>
                <%= @user.location.name %></li>
        <% end %>
        <li class="show-info"><strong>Contact:</strong>
                <%= @user.contact %></li>
    </div>

    <div class="search-box">
        <%= form_tag(search_path, :method => :get) do %>
        <div class="row">
            <div class="col-lg-4">
                <div class="input-group">
                    <input id="searchfield" type="text" class="form-control" name="name" placeholder="Search your favorite destination">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="searchbutton">Go!</button>
                    </span>
                </div>
            </div>
        </div>
        <% end %>
    </div>

    <% if @current_user != @user %>
    <div class="mailbox">
        <%= form_tag message_path, :method => :get do %>
        <%= hidden_field_tag(:user_id, @user.id)%>
        <textarea rows="4" cols="50" class="form-control" name="mailinput"></textarea>
        <span class="input-group-btn">
          <button class="btn btn-default" id="searchbutton">Send Mail</button>
        </span>
        <% end %>
    </div>
    <% end %>
</div>
