<div>
  <h2 class="col-xs-4 col-xs-offset-5">Edit Profile
  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  </h2>

  <% if @user.errors.any? %>
    <ol>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ol>
  <% end %>
<div  class="col-xs-7 col-xs-offset-4">
<%= form_for(@user, :class => "form-horizontal", :html => {:multipart => true}) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <div>
      <%= f.text_field(:name, :class => "form-control", :autofocus => true, :required => true )%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <div>
    <%= f.text_field(:email, :class => "form-control", :required => true) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact %>
    <div>
    <%= f.text_field(:contact, :class => "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <div>
      <%= cl_image_upload_tag(:image, :class => "form-control" )%>
    </div>
  </div>

  <div class="form-group">
  <%= f.label :last_visited %>
    <div>
      <%#= f.text_field(:location, :placeholder=>'Melbourne, London, Sanfrancisco...', :class => "form-control" )%>

      <% if @user.location.nil? %>
        <%= f.text_field(:location, :placeholder=>'Melbourne, London, Sanfrancisco...', :class => "form-control" )%>
      <% else %>
        <%# raise "hell" %>
        <%= f.text_field(:location, :value => @user.location.last.name, :class => "form-control" )%>
      <% end %>
    </div>
  </div>

  <div class="form-group">
  <%= f.label :city %>
    <div>
      <% if @user.city.nil? %>
        <%= f.text_field(:city, :placeholder=>'Sydney...', :class => "form-control" )%>
      <% else %>
        <%= f.text_field(:city, :value => @user.city, :class => "form-control" )%>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <div>
      <%= f.password_field(:password, :class => "form-control" )%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <div>
      <%= f.password_field(:password_confirmation, :class => "form-control" )%>
    </div>
  </div>

  <%= f.submit "Save Changes", :class => "btn btn-primary"%>
<% end %>
</div>
</div>
